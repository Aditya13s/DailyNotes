<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/surface_container"
        app:strokeWidth="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/card_ripple">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <TextView
                android:id="@+id/notesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/note_title_color"
                android:maxLines="2"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />
                
            <TextView
                android:id="@+id/notesDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="@color/note_description_color"
                android:maxLines="4"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                tools:ignore="HardcodedText" />
                
            <TextView
                android:id="@+id/notesDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Date"
                android:textSize="12sp"
                android:textColor="@color/note_date_color"
                android:gravity="end"
                tools:ignore="HardcodedText" />
                
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>